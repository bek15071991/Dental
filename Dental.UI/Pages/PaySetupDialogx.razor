@inherits PaySetupDialogBasex

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="titleLabel">Pay You Bill</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <EditForm Model="@paySetupx" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="CreditCard">Credit Card: </label>
                <InputText id="CreditCard" class="form-control" @bind-Value="@paySetupx.CreditCardNumber" placeholder="Enter Credit Card:"></InputText>
                <ValidationMessage For="@(() =>paySetupx.CreditCardNumber)" />
            </div>
            <div class="form-group">
                <label for="ExpDate">Exp Date: </label>
                <InputText id="ExpDate" class="form-control" @bind-Value="@paySetupx.ExpDate" placeholder="Enter Expiration Date:"></InputText>
                <ValidationMessage For="@(() =>paySetupx.ExpDate)" />
            </div>
            <div class="form-group">
                <label for="CCV">CCV: </label>
                <InputTextArea id="CCV" class="form-control" @bind-Value="@paySetupx.CCV" placeholder="Enter CCV:"></InputTextArea>
            </div>
            <div class="form-group">
                <label for="PaymentAmount">Payment Amount: </label>
                <InputNumber id="PaymentAmount" class="form-control" @bind-Value="@paySetupx.PaymentAmount" placeholder="Enter payment amount:"></InputNumber>
            </div>
                @if (paySetupx.CreditCardNumber != "" && paySetupx.ExpDate != "" && paySetupx.CCV != "" && paySetupx.PaymentAmount > 0)
                {
                    <button type="submit" class="btn btn-primary">Pay</button>
                }
               
                <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
        </EditForm>

    </div>
    </div>
    </div>
    </div>
}