@inherits AddMessageDialogBase

@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="titleLabel">Message Quick Add</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <EditForm Model="@Message" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            
            <div class="form-group">
                <label for="Direction">Direction: </label>
                <InputText id="Direction" class="form-control" @bind-Value="@Message.Direction" placeholder="Enter Direction:"></InputText>
                <ValidationMessage For="@(() =>Message.Direction)"/>
            </div>
            <div class="form-group">
                <label for="MessageText">Message: </label>
                <InputTextArea id="MessageText" class="form-control" @bind-Value="@Message.MessageText" placeholder="Enter Message:"></InputTextArea>
            </div>

            <button type="submit" class="btn btn-primary">Save Message</button>
            <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
        </EditForm>

    </div>
    </div>
    </div>
    </div>
}